{
  "name": "portfolio",
  "version": "0.1.0",
  "description": "frameworkless nodejs, typescript portfolio",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "NODE_ENV=local tsx watch src/server.ts",
    "dev:pretty": "NODE_ENV=local tsx watch src/server.ts | pino-pretty",
    "dev:full": "concurrently \"npm run dev\" \"npm run build:components:watch\"",
    "build": "tsc",
    "build:components": "tsc -p tsconfig.components.json",
    "build:components:watch": "tsc -p tsconfig.components.json --watch",
    "start": "node dist/server.js",
    "start:staging": "NODE_ENV=staging node dist/server.js",
    "start:prod": "NODE_ENV=production node dist/server.js",
    "type-check": "tsc --noEmit",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "prepare": "husky"
  },
  "keywords": [],
  "author": "Tron Bohdan",
  "license": "ISC",
  "packageManager": "pnpm@10.28.0",
  "dependencies": {
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "helmet": "^8.1.0",
    "husky": "^9.1.7",
    "pino": "^10.2.0",
    "pino-http": "^11.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/node": "^25.0.9",
    "concurrently": "^9.2.1",
    "lint-staged": "^16.2.7",
    "nodemon": "^3.1.11",
    "pino-pretty": "^13.1.3",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "*.{js,ts,json}": [
      "biome check --write --no-errors-on-unmatched"
    ]
  }
}
